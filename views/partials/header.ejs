<!-- views/partials/header.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title + ' - ' : '' %>CoffeeShop</title>
    <!-- <link rel="stylesheet" href="css/style.css"> -->
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Dancing+Script:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    
</head>
<body>
    
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark sticky-top">
        <div class="container">
            <!-- Brand -->
            <a class="navbar-brand d-flex align-items-center" href="/">
                <i class="fas fa-coffee coffee-icon me-2"></i>
                CoffeeShop
            </a>
            
            <!-- Mobile Toggle -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <!-- Navigation Links -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <i class="fas fa-home me-1"></i>Home
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="productsDropdown" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-coffee me-1"></i>Products
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/products"><i class="fas fa-th-large me-2"></i>All Products</a></li>
                            <li><a class="dropdown-item" href="/products?category=coffee"><i class="fas fa-coffee me-2"></i>Coffee</a></li>
                            <li><a class="dropdown-item" href="/products?category=tea"><i class="fas fa-leaf me-2"></i>Tea</a></li>
                            <li><a class="dropdown-item" href="/products?category=pastry"><i class="fas fa-cookie-bite me-2"></i>Pastries</a></li>
                            <li><a class="dropdown-item" href="/products?category=smoothie"><i class="fas fa-blender me-2"></i>Smoothies</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/about">
                            <i class="fas fa-info-circle me-1"></i>About
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/contact">
                            <i class="fas fa-envelope me-1"></i>Contact
                        </a>
                    </li>
                </ul>
                
                <!-- Search Form -->
                <form class="search-form d-flex me-3" action="/products" method="get">
                    <div class="input-group">
                        <input class="form-control" type="search" placeholder="Search products..." name="search">
                        <button class="btn btn-search" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </form>
                
                <!-- User Menu -->
                <ul class="navbar-nav">
                    <% if (typeof isAuthenticated !== 'undefined' && isAuthenticated) { %>
                        <!-- Authenticated User -->
                        <li class="nav-item me-2">
                            <a class="nav-link" href="/cart" id="navCartLink">
                                <i class="fas fa-shopping-cart" id="navCartIcon"></i>
                                <span class="d-none d-lg-inline">Cart</span> <span class="badge" id="cartCount"><%= typeof cartCount !== 'undefined' ? cartCount : 0 %></span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/favorites" id="navFavLink">
                                <i class="fas fa-heart" id="navFavIcon"></i>
                                <span class="d-none d-lg-inline">Favorites</span> <span class="badge" id="favCount"><%= typeof favoritesCount !== 'undefined' ? favoritesCount : 0 %></span>
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user-circle"></i>
                                <%= user && user.first_name ? user.first_name : 'User' %>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="/dashboard"><i class="fas fa-tachometer-alt me-2"></i>Dashboard</a></li>
                                <li><a class="dropdown-item" href="/profile"><i class="fas fa-user-edit me-2"></i>Profile</a></li>
                                <li><a class="dropdown-item" href="/orders"><i class="fas fa-shopping-bag me-2"></i>My Orders</a></li>
                                <% if (user && user.role === 'admin') { %>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="/admin"><i class="fas fa-cogs me-2"></i>Admin Panel</a></li>
                                <% } %>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/logout"><i class="fas fa-sign-out-alt me-2"></i>Logout</a></li>
                            </ul>
                        </li>
                    <% } else { %>
                        <!-- Guest User -->
                        <li class="nav-item">
                            <a class="btn btn-outline-light me-2" href="/login">
                                <i class="fas fa-sign-in-alt me-1"></i>Login
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-light" href="/register">
                                <i class="fas fa-user-plus me-1"></i>Register
                            </a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content Wrapper -->
    <main class="main-content">

<script>
// Function to update cart count in header
function updateCartCount(newCount) {
    const cartCountEl = document.getElementById('cartCount');
    if (cartCountEl) {
        cartCountEl.textContent = newCount;
    }
}

// Function to get current cart count
function getCurrentCartCount() {
    const cartCountEl = document.getElementById('cartCount');
    return cartCountEl ? parseInt(cartCountEl.textContent) || 0 : 0;
}

// Function to update favorites count in header
function updateFavCount(newCount) {
    const favCountEl = document.getElementById('favCount');
    if (favCountEl) {
        favCountEl.textContent = newCount;
    }
}
</script>