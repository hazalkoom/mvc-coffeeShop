<%- include('../partials/header') %>

<section class="hero-section py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7">
                <h1 class="hero-title">Contact Us</h1>
                <p class="hero-subtitle">We'd love to hear from you. Send us a message anytime.</p>
            </div>
        </div>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="row g-4">
            <div class="col-lg-7">
                <div class="p-4 bg-white rounded-4 shadow-sm">
                    <h3 class="mb-3">Send a Message</h3>
                    <form method="post" action="#" onsubmit="event.preventDefault(); alert('Message sent! (demo)');">
                        <div class="mb-3">
                            <label class="form-label">Your Name</label>
                            <input type="text" class="form-control" name="name" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input type="email" class="form-control" name="email" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Subject</label>
                            <input type="text" class="form-control" name="subject">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Message</label>
                            <textarea class="form-control" rows="6" name="message" required></textarea>
                        </div>
                        <button class="btn btn-primary" type="submit"><i class="fas fa-paper-plane me-2"></i>Send</button>
                    </form>
                </div>
            </div>
            <div class="col-lg-5">
                <div class="p-4 bg-white rounded-4 shadow-sm h-100">
                    <h5 class="mb-3"><i class="fas fa-map-marker-alt me-2"></i>Our Store</h5>
                    <p>123 Coffee Street, Bean City<br>New York, NY 10001</p>
                    <h5 class="mt-4 mb-3"><i class="fas fa-envelope me-2"></i>Email</h5>
                    <p><a href="mailto:info@coffeeshop.com">info@coffeeshop.com</a></p>
                    <h5 class="mt-4 mb-3"><i class="fas fa-phone me-2"></i>Phone</h5>
                    <p><a href="tel:+1234567890">+1 (234) 567-8900</a></p>
                    <h5 class="mt-4 mb-3"><i class="fas fa-clock me-2"></i>Hours</h5>
                    <p>Mon–Fri: 6:00 AM – 10:00 PM<br>Sat–Sun: 7:00 AM – 11:00 PM</p>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('../partials/footer') %>







