<%- include('../partials/header') %>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">
                <i class="fas fa-tachometer-alt me-2"></i>
                Welcome to Your Dashboard, <%= userData.first_name || 'User' %>!
            </h1>
        </div>
    </div>

    <!-- Quick Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title"><%= cartItems %></h4>
                            <p class="card-text">Items in Cart</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-shopping-cart fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title"><%= recentOrders.length %></h4>
                            <p class="card-text">Total Orders</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-shopping-bag fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">$<%= totalSpent.toFixed(2) %></h4>
                            <p class="card-text">Total Spent</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-dollar-sign fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">Member</h4>
                            <p class="card-text">Since <%= new Date(userData.createdAt).toLocaleDateString() %></p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-user fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Quick Actions -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-bolt me-2"></i>
                        Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="/products" class="btn btn-outline-primary">
                            <i class="fas fa-coffee me-2"></i>
                            Browse Products
                        </a>
                        <a href="/cart" class="btn btn-outline-success">
                            <i class="fas fa-shopping-cart me-2"></i>
                            View Cart
                        </a>
                        <a href="/profile" class="btn btn-outline-info">
                            <i class="fas fa-user-edit me-2"></i>
                            Edit Profile
                        </a>
                        <a href="/orders" class="btn btn-outline-warning">
                            <i class="fas fa-history me-2"></i>
                            Order History
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Orders -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-clock me-2"></i>
                        Recent Orders
                    </h5>
                </div>
                <div class="card-body">
                    <% if (recentOrders.length > 0) { %>
                        <% recentOrders.forEach(order => { %>
                            <div class="d-flex justify-content-between align-items-center border-bottom py-2">
                                <div>
                                    <h6 class="mb-1">Order #<%= order.orderNumber %></h6>
                                    <small class="text-muted"><%= new Date(order.createdAt).toLocaleDateString() %></small>
                                </div>
                                <div class="text-end">
                                    <span class="badge bg-<%= order.status === 'completed' ? 'success' : 'warning' %>">
                                        <%= order.status %>
                                    </span>
                                    <div class="fw-bold">$<%= order.total.toFixed(2) %></div>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="text-center py-4">
                            <i class="fas fa-shopping-bag fa-3x text-muted mb-3"></i>
                            <p class="text-muted">No orders yet</p>
                            <a href="/products" class="btn btn-primary">Start Shopping</a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Account Information -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        Account Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Name:</strong> <%= userData.first_name %> <%= userData.last_name %></p>
                            <p><strong>Email:</strong> <%= userData.email %></p>
                            <p><strong>Role:</strong> <span class="badge bg-secondary"><%= userData.role %></span></p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Member Since:</strong> <%= new Date(userData.createdAt).toLocaleDateString() %></p>
                            <p><strong>Last Updated:</strong> <%= new Date(userData.updatedAt).toLocaleDateString() %></p>
                            <p><strong>Account Status:</strong> <span class="badge bg-success">Active</span></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
