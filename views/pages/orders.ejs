<%- include('../partials/header') %>

<section class="py-5">
    <div class="container">
        <h2 class="mb-4">My Orders</h2>
        <% if (orders && orders.length) { %>
            <div class="list-group">
                <% orders.forEach(o => { %>
                    <a href="/orders/<%= o.order_id %>" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <div>
                            <div class="fw-bold">Order #<%= o.order_id %></div>
                            <small class="text-muted"><%= new Date(o.created_at).toLocaleString() %> Â· <%= o.status %></small>
                        </div>
                        <div class="fw-bold">$<%= Number(o.total_amount).toFixed(2) %></div>
                    </a>
                <% }) %>
            </div>
        <% } else { %>
            <div class="text-center py-5">
                <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                <p class="text-muted">You have no orders yet.</p>
                <a href="/products" class="btn btn-primary">Shop now</a>
            </div>
        <% } %>
    </div>
</section>

<%- include('../partials/footer') %>


