<%- include('../partials/header') %>

<section class="py-5">
    <div class="container">
        <h2 class="mb-4">Order #<%= order.order_id %></h2>
        <div class="row g-4">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Items</h5>
                    </div>
                    <div class="card-body">
                        <% items.forEach(it => { %>
                            <div class="d-flex justify-content-between align-items-center border-bottom py-2">
                                <div>
                                    <div class="fw-bold"><%= it.product_name %></div>
                                    <small class="text-muted">Qty: <%= it.quantity %></small>
                                </div>
                                <div class="text-end">
                                    <div>$<%= Number(it.unit_price).toFixed(2) %></div>
                                    <small class="text-muted">$<%= Number(it.line_total).toFixed(2) %></small>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Status</span>
                            <span class="badge bg-<%= order.status === 'completed' ? 'success' : 'warning' %>"><%= order.status %></span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span>Total</span>
                            <strong>$<%= Number(order.total_amount).toFixed(2) %></strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('../partials/footer') %>


